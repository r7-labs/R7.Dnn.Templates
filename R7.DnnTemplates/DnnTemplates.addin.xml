<Addin id="R7.DnnTemplates" namespace="MonoDevelop" name="DNN Platform Templates" 
    author="Roman M. Yagodin" copyright="GNU GPL v3" url="https://github.com/roman-yagodin/R7.DnnTemplates" 
    description="Templates for module, skin object and packaging projects for DNN Platform. Also provides syntax highlighting for DNN manifest files and SqlDataProvider scripts." 
    category="Web Development" version="0.3.3">
    <Dependencies>
        <Addin id="Core" version="5.2" />
        <Addin id="Ide" version="5.2" />
        <Addin id="AspNet" version="5.2" />
        <Addin id="SourceEditor2" version="5.2" />
    </Dependencies>
    <Runtime>
        <Import file="DnnCSharpModuleDAL2.xpt.xml" />
        <Import file="DnnCSharpSkinObject.xpt.xml" />
        <Import file="DnnPetaPocoClass.xft.xml" />
        <Import file="DnnInstallPackage.xft.xml" />
        <Import file="DnnSourcePackage.xft.xml" />
        <Import file="DnnPackaging.xpt.xml" />
        <Import file="DnnSqlDataProviderSyntaxMode.xml" />
        <!-- <Import file="/icons/dnn-module-32.png" /> -->
    </Runtime>
    <Extension path="/MonoDevelop/Ide/FileTemplates">
        <FileTemplate id="DnnPetaPocoClass" file="DnnPetaPocoClass.xft.xml" />
        <FileTemplate id="DnnInstallPackage" file="DnnInstallPackage.xft.xml" />
        <FileTemplate id="DnnSourcePackage" file="DnnSourcePackage.xft.xml" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/ProjectTemplates">
        <ProjectTemplate id="DnnCSharpModuleDAL2" file="DnnCSharpModuleDAL2.xpt.xml" />
        <ProjectTemplate id="DnnCSharpSkinObject" file="DnnCSharpSkinObject.xpt.xml" />
        <ProjectTemplate id="DnnPackaging" file="DnnPackaging.xpt.xml" />
    </Extension>
    <Extension path="/MonoDevelop/Core/MimeTypes">
        <MimeType id="text/x-dnn-manifest" _description="DNN Platform Manifest File" icon="md-xml-file-icon" baseType="application/xml">
            <File pattern="*.dnn" />
            <File pattern="*.dnn5" />
            <File pattern="*.dnn6" />
        </MimeType>
        <MimeType id="text/x-dnn-sqldataprovider" _description="DNN Platform SQL Data Provider File" isText="true">
            <File pattern="*.SqlDataProvider" />
            <File pattern="*.sqldataprovider" />
        </MimeType>
    </Extension>
    <Extension path="/MonoDevelop/SourceEditor2/SyntaxModes">
        <Templates file="DnnSqlDataProviderSyntaxMode.xml" />
    </Extension>
</Addin>
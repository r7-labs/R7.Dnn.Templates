<Addin id="R7.DnnTemplates" version="0.6.0" namespace="MonoDevelop">
    <Header>
        <Name>DNN Platform Templates &amp; Support</Name>
        <Category>Web Development</Category>
        <Description>Templates for module, skin object and packaging projects for DNN Platform. Also provides syntax highlighting for DNN manifest files and SqlDataProvider scripts.</Description>
        <Author>Roman M. Yagodin</Author>
        <Url>https://github.com/roman-yagodin/R7.DnnTemplates</Url>
        <Icon32>icons/dnn-templates.png</Icon32>
        <UpdateRank>Minor</UpdateRank>
        <ReleaseNotesFile>releaseNotes.txt</ReleaseNotesFile>
    </Header>
    <Dependencies>
        <Addin id="Core" version="6.0" />
        <Addin id="Ide" version="6.0" />
        <Addin id="AspNet" version="6.0" />
        <Addin id="SourceEditor2" version="6.0" />
    </Dependencies>
    <Runtime>
        <Import assembly="R7.DnnTemplates.dll" />
        <Import file="DnnCSharpModuleDAL2.xpt.xml" />
        <Import file="DnnCSharpSkinObject.xpt.xml" />
        <Import file="DnnPetaPocoClass.xft.xml" />
        <Import file="DnnInstallPackage.xft.xml" />
        <Import file="DnnLocalDeploy.xft.xml" />
        <Import file="DnnPackaging.xpt.xml" />
        <Import file="DnnSqlDataProviderSyntaxMode.xml" />
    </Runtime>
    <Extension path="/MonoDevelop/Ide/FileTemplates">
        <FileTemplate id="DnnPetaPocoClass" file="DnnPetaPocoClass.xft.xml" />
        <FileTemplate id="DnnInstallPackage" file="DnnInstallPackage.xft.xml" />
        <FileTemplate id="DnnLocalDeploy" file="DnnLocalDeploy.xft.xml" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/ProjectTemplates">
        <ProjectTemplate id="DnnCSharpModuleDAL2" file="DnnCSharpModuleDAL2.xpt.xml" />
        <ProjectTemplate id="DnnCSharpSkinObject" file="DnnCSharpSkinObject.xpt.xml" />
        <ProjectTemplate id="DnnPackaging" file="DnnPackaging.xpt.xml" />
    </Extension>
    <Extension path="/MonoDevelop/Core/MimeTypes">
        <MimeType id="text/x-dnn-manifest" _description="DNN Platform Manifest File" icon="md-xml-file-icon" baseType="application/xml">
            <File pattern="*.dnn" />
            <File pattern="*.dnn5" />
            <File pattern="*.dnn6" />
        </MimeType>
        <MimeType id="text/x-nuget-package-specification" _description="NuGet Package Specification" icon="md-xml-file-icon" baseType="application/xml">
            <File pattern="*.nuspec" />
        </MimeType>
        <MimeType id="text/x-dnn-sqldataprovider" _description="DNN Platform SQL Data Provider File" isText="true">
            <File pattern="*.SqlDataProvider" />
            <File pattern="*.sqldataprovider" />
        </MimeType>
    </Extension>
    <Extension path="/MonoDevelop/SourceEditor2/SyntaxModes">
        <Templates file="DnnSqlDataProviderSyntaxMode.xml" />
    </Extension>
</Addin>